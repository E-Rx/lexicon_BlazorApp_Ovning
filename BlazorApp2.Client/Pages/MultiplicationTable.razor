@page "/multiplication-table"
@rendermode InteractiveWebAssembly

<h3>Multiplication Table</h3>

<div>
    <input type="number" @bind="selectedNumber" min="1" max="12" />
    <button @onclick="ShowTable">Show Table</button>
</div>

@if (IsTableVisible)
{
    <ul>
        @foreach (var row in table)
        {
            <li>@row</li>
        }
    </ul>
}

@code {
    private int selectedNumber = 1;
    private bool IsTableVisible = false;
    private List<string> table = new();

    private void ShowTable()
    {
        table.Clear();
        if (selectedNumber >= 1 && selectedNumber <= 12)
        {
            for (int i = 1; i <= 12; i++)
            {
                table.Add($"{selectedNumber} x {i} = {selectedNumber * i}");
            }
            IsTableVisible = true;
        }
        else
        {
            IsTableVisible = false;
        }
    }
}